{
  "name": "dental_crm_backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "dev": "nodemon src/server.ts",
    "dev:ts-node": "nodemon --exec ts-node src/server.ts",
    "dev:tsx": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "start:prod": "pm2 start dist/server.js --name dental-crm",
    "init:super-admin": "npx ts-node scripts/initSuperAdmin.ts",
    "prebuild": "npm i",
    "clean": "rimraf dist",
    "postbuild": "npm run copy-scripts",
    "copy-scripts": "copyfiles -u 1 scripts/**/*.js dist/"
  },
  "keywords": [
    "dental",
    "crm",
    "healthcare",
    "api",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": {
    "name": "Harmanpreet Singh",
    "email": "harmanpreet.dev01@gmail.com"
  },
  "license": "ISC",
  "description": "Dental CRM backend API",
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/express": "^4.17.21",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "node-cron": "^4.2.0",
    "nodemailer": "^7.0.4",
    "qrcode": "^1.5.4",
    "rimraf": "^6.0.1",
    "speakeasy": "^2.0.0",
    "ts-node": "^10.9.2",
    "twilio": "^5.7.1",
    "winston": "^3.17.0"
  }
}
